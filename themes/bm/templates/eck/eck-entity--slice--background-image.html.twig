{% set has_image = entity.field_bg_image|render %}
{% if has_image is not empty %}
    {% set image_url = file_url(entity.field_bg_image['#object'].field_bg_image.0.entity.uri.value) %}
    <div class="no-repeat cover" style="background-image:url({{ image_url }})">
{% else %}
    <div>
{% endif %}
    {{ entity|without('field_bg_image') }}
</div>
